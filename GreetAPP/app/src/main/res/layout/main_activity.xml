<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Switch
        android:id="@+id/premium"
        android:layout_width="wrap_content"
        android:text="Premium"
        android:layout_marginTop="@dimen/dimen_txt1"
        android:layout_gravity="right"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_txt1"
        android:text="Name"/>

    <EditText
        android:id="@+id/txtNameIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_txt1"
        android:layout_marginRight="@dimen/dimen_txt1"
        android:maxLength="20"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/txtChars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_bot_txt"
        android:layout_gravity="right"
        android:text="chars"/>

    <TextView
        android:id="@+id/txtSirname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Sirname"/>

    <EditText
        android:id="@+id/txtSirnameIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_txt1"
        android:layout_marginRight="@dimen/dimen_txt1"
        android:maxLength="20"
        android:imeOptions="actionDone"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/txtChars2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_bot_txt"
        android:layout_gravity="right"
        android:text="chars"/>


    <TextView
        android:id="@+id/txtTreat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Treatment"/>


    <RadioGroup
        android:id="@+id/rdgB1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        android:orientation="horizontal">

        <ImageView
        android:id="@+id/imgShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mr"
        android:scaleType="centerCrop"/>

        <RadioButton
            android:id="@+id/rdbMr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_Mr"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/rdbMrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_Mrs" />
        <RadioButton
            android:id="@+id/rdbMs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_Ms" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/lin_poli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/poli_chck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/poli_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_poli"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnGreet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/main_btnGreet"/>

    <ProgressBar
        android:id="@+id/pbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminate="false"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="@dimen/dimen_txt1"
        android:max="10"/>

    <TextView
        android:id="@+id/lblTimes"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dimen_txt1"
        android:layout_marginRight="@dimen/dimen_txt1"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtSaludo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="22dp"
        android:textStyle="bold"
        android:visibility="gone"
        android:text="Saludo1"/>
</LinearLayout>